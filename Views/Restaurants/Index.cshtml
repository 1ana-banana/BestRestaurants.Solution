@{
  Layout = "_Layout";
}

@using BestRestaurants.Models;
@model List<BestRestaurants.Models.Restaurant>;

<h1>Restaurants</h1>

@if (@Model.Count == 0)
{
  <h2>There is nothing to see here!</h2> 
}

@foreach (Restaurant restaurant in Model)
{
  <li>@Html.ActionLink($"{restaurant.Name}", "Details", new {id = restaurant.RestaurantId}) | @restaurant.Cuisine.CuisineName</li>
}

<p>@Html.ActionLink("Add a new restaurant", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>