@{
  Layout = "_Layout";
}

@using BestRestaurants.Models;

<h1>Cuisines</h1>

@if (@Model.Count == 0)
{
  <h2>There is nothing to see here!</h2> 
}

@foreach (Cuisine cuisine in Model)
{
  <li>@Html.ActionLink($"{cuisine.CuisineName}", "Details", new {id = cuisine.CuisineId})</li>
}

<p>@Html.ActionLink("Add a new cuisine", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>